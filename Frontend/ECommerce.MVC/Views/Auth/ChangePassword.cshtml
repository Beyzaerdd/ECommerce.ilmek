@model ECommerce.MVC.Models.AuthModels.ChangePasswordModel;


@{
    Layout = "_AuthLayout";
}


<body class="h-100">
    <div class="d-flex flex-column h-100 p-3">
        <div class="d-flex flex-column flex-grow-1">
            <div class="row h-100">
                <div class="col-xxl-7">
                    <div class="row justify-content-center h-100">
                        <div class="col-lg-6 py-lg-5">
                            <div class="d-flex flex-column h-100 justify-content-center">

                                <h2 class="fw-bold fs-24">Şifre Değiştirme</h2>
                                <p class="text-muted mt-1 mb-4">
                                    Mevcut şifrenizi girin ve ardından yeni bir şifre belirleyin.
                                </p>

                            
                                <div>
                                    <form asp-controller="Auth" asp-action="ChangePassword" method="post" class="authentication-form">
                                        @Html.AntiForgeryToken()

                                        <!-- Genel hata mesajları -->
                                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                          
                                        <div class="mb-3">
                                            <label class="form-label" for="Email">E-posta</label>
                                            <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                            
                                        <div class="mb-3">
                                            <label class="form-label" for="CurrentPassword">Mevcut Şifre</label>
                                            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Mevcut şifrenizi girin" />
                                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                        </div>

                             
                                        <div class="mb-3">
                                            <label class="form-label" for="NewPassword">Yeni Şifre</label>
                                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Yeni şifrenizi girin" />
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>

                             
                                        <div class="mb-3">
                                            <label class="form-label" for="ConfirmNewPassword">Yeni Şifre Tekrar</label>
                                            <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Yeni şifrenizi tekrar girin" />
                                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                        </div>

                         
                                        <div class="mb-1 text-center d-grid">
                                            <button class="btn btn-primary" type="submit">Şifreyi Değiştir</button>
                                        </div>
                                    </form>
                                </div>

                             
                                <p class="mt-5 text-center">
                                    Geri dönmek için 
                                    <a asp-controller="Auth" asp-action="LoginUser" method="post"class="text-dark fw-bold ms-1">Giriş Yap</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sağdaki Görsel Alanı -->
                <div class="col-xxl-5 d-none d-xxl-flex">
                    <div class="card h-100 mb-0 overflow-hidden">
                        <div class="d-flex flex-column h-100">
                            <img src="~/Admin/larkon/admin/assets/images/small/img-10.jpg" alt="Şifre Değiştirme Görseli" class="w-100 h-100">
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
