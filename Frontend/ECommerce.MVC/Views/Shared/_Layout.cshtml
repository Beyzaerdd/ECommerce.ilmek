<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerce.MVC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        .accordion-button {
            background-color: white !important;
            border: none;
        }

        .btn-outline-secondary {
            min-width: 50px;
            text-align: center;
        }

        .accordion-item {
            border: none;
        }

        .accordion-body {
            padding: 10px;
        }

        .color-box {
            display: inline-block;
            width: 40px;
            height: 40px;
            border-radius: 6px;
            border: 2px solid #ccc;
            cursor: pointer;
            transition: 0.3s;
        }

            .color-box:hover, .color-box:has(input:checked) {
                border: 2px solid #333;
            }
    </style>
    @await Html.PartialAsync("_StylesPartial")


</head>

<body>
    <header class="header">
        @await Component.InvokeAsync("Navbar")
    </header>
    @RenderBody() <!-- Main content -->
    <partial name="_FooterPartial" />
    @await Html.PartialAsync("_ScriptsPartial")
    @await Component.InvokeAsync("NToastNotify")
    @RenderSection("Scripts", required: false)
    <!-- jQuery 3.3.1 -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    <!-- jQuery UI 1.12.1 (jQuery 3.3.1 ile en uyumlu sürüm) -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
